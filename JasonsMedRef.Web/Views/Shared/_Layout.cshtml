<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">@*<img src="~/images/jmr-square.svg" />*@ Jason's Medical Reference</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/DataSets">Data Sets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Disclaimers">Disclaimers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Licenses">Licenses</a>
                </li>
            </ul>
            @using (Html.BeginForm("RxSearch", "Search", FormMethod.Post, new { @class="form-inline my-2 my-lg-0", id = "navbarSearchForm"}))
            {
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="rxSearchString" name="rxSearchString" />
                <button class="btn btn-danger my-2 my-sm-0" type="submit">Search</button>
            }

@using JasonsMedRef.Models
@model List<Package>

<table id="sduDetailTable" class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
    <tr>
        <th>Labeler</th>
        <th>NDC</th>
        <th>Application No.</th>
        <th>Start Marketing</th>
        <th>End Marketing</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rec in Model.OrderBy(x=> x.LabelerName).ThenBy(x => x.Ndc))
    {
        <tr>
            <td>@rec.LabelerName</td>
            <td>@rec.Ndc</td>
            <td>@rec.ApplicationNumber</td>
            <td>@rec.StartMarketingDate?.ToString("MM/dd/yyyy")</td>
            <td>@rec.EndMarketingDate?.ToString("MM/dd/yyyy")</td>
            <td>@rec.Description</td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div>No Data Found.</div>
}

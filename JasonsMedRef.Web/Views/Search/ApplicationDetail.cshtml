@using JasonsMedRef.Models
@model List<Application>

<table id="sduDetailTable" class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
    <tr>
        <th>Approval Date</th>
        <th>Application Type</th>
        <th>Application No.</th>
        <th>Product No.</th>
        <th>Applicant</th>
        <th>Applicant Full Name</th>
        <th>RLD</th>
        <th>RS</th>
        <th>TE Code</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rec in Model.OrderBy( x=> x.ApprovalDate))
    {
        <tr>
            <td>@(rec.ApprovalDate == null ? "Before 1982" : rec.ApprovalDate.Value.ToString("MM/dd/yyyy"))</td>
            <td>@rec.ApplicationType.ToString()</td>
            <td>@rec.ApplicationNumber</td>
            <td>@rec.ProductNumber</td>
            <td>@rec.Applicant</td>
            <td>@rec.ApplicantFullName</td>
            <td>@rec.ReferenceListedDrug</td>
            <td>@rec.ReferenceStandard</td>
            <td>@rec.TeCode</td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div>No Data Found.</div>
}

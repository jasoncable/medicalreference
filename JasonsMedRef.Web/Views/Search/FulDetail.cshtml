@using JasonsMedRef.Models
@model List<FederalUpperLimit>

<table id="fulDetailTable"  class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
    <tr>
        <th>NDC</th>
        <th>Price Date</th>
        <th>Unit Type</th>
        <th>Package Size</th>
        <th>Federal Upper Limit</th>
        <th>Avg. Mfr. Unit Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rec in Model.OrderBy(x => x.Ndc))
    {
        <tr>
            <td>@rec.Ndc</td>
            <td>@rec.ReportingDate.ToString("MM/dd/yyyy")</td>
            <td>@rec.UnitType</td>
            <td class="mono center">@rec.PackageSize</td>
            <td class="mono center">@rec.Ful.ToDisplayString()</td>
            <td class="mono center">@rec.AvgMfgPrice.ToDisplayString()</td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div>No Data Found.</div>
}
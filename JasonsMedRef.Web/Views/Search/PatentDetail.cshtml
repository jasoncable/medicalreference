@using JasonsMedRef.Models
@model List<Patent>

<table id="patentDetailTable" class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Patent Number</th>
            <th>Expiration Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rec in Model)
        {
            <tr>
                <td>@rec.PatentNumber</td>
                <td>@rec.ExpirationDate.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div>No Data Found.</div>
}
@using JasonsMedRef.Models
@model List<Nadac>

<table id="nadacDetailTable" class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
    <tr>
        <th>NDC</th>
        <th>Price Date</th>
        <th>Unit Type</th>
        <th>Price per Unit</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var rec in Model.OrderBy(x => x.Ndc))
        {
            <tr>
                <td>@rec.Ndc</td>
                <td>@rec.AsOfDate?.ToString("MM/dd/yyyy")</td>
                <td class="mono center">@rec.PricingUnit</td>
                <td class="mono center">@rec.NadacPerUnit.ToDisplayString()</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div>No Data Found.</div>
}